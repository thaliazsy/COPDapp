<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COPDapp.Rehabilitation" 
             BackgroundColor="#dff4d7">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Home" Order="Primary" Icon="home.png" Text="Home" Priority="0" Activated="Home_Activated" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="非藥物治療" Padding="0, 15" HorizontalOptions="CenterAndExpand" CharacterSpacing="3" HorizontalTextAlignment="Center" FontSize="45"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="戒菸" x:Name="btn_smoke" ClassId="smoke" Clicked="BtnMenu_Clicked" FontSize="20" BackgroundColor="#f78f8d" TextColor="White" CornerRadius="15" HorizontalOptions="CenterAndExpand"/>
                <Button Text="復健" x:Name="btn_rehabilitation" ClassId="rehabilitation" FontSize="20" Clicked="BtnMenu_Clicked" BackgroundColor="#f78f8d" TextColor="White" CornerRadius="15" HorizontalOptions="CenterAndExpand"/>
                <Button Text="營養" x:Name="btn_nutrition" ClassId="nutrition" FontSize="20" Clicked="BtnMenu_Clicked" BackgroundColor="#f78f8d" TextColor="White" CornerRadius="15" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>