<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COPDapp.EducationVideo" BackgroundColor="#dff4d7">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Home" Order="Primary" Icon="home.png" Text="Home" Priority="0" Activated="Home_Activated" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Center">
                <Label x:Name="header" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                <MediaElement x:Name="videoBox" Source="http://203.64.84.218/copd/video/1_肺阻塞_自我檢測.mp4" HeightRequest="300" ShowsPlaybackControls="True" AutoPlay="True" 
                              MediaOpened="OnMediaOpened"
                  MediaFailed="OnMediaFailed"
                  MediaEnded="OnMediaEnded"
                  SeekCompleted="OnSeekCompleted"/>
                <Label x:Name="alert" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="影片載入中，請稍後..." FontSize="30" />
                <Label x:Name="videoSource" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>